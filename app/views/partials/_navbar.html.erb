
<style>
  .button_to{
    padding: 0 !important;
  }
  .brand{
    padding-right: 1%;
    color: rgba(0, 0, 0, 0.7) !important;
  }
  .nav-link{
    color: rgba(0, 0, 0, 0.7) !important;
  }
  @media(max-width:1168px){
    .nav-visible{
      font-size: 0.95rem !important;
    }
    .btn-out{
      font-size: 0.95rem !important;
    }
  }
  @media(max-width:1074px){
    .nav-visible{
      font-size: 0.85rem !important;
    }
    .btn-out{
      font-size: 0.85rem !important;
    }
  }
  @media(max-width:1018px){
    .nav-visible{
      font-size: 0.8rem !important;
    }
    .btn-out{
      font-size: 0.8rem !important;
    }
  }
  @media(max-width:992px){
    .nav-visible{
      font-size: 1.1rem !important;
      border: none !important;

    }
    .btn-out{
      font-size: 1.1rem !important;
    }
  }
  .nav-visible{
    border: 2px solid rgba(0, 0, 0, 0.7);
    border-radius: 6px;
    padding-bottom: 0.5rem !important;
    padding-top: 0.3rem !important;
    padding-left: 0.6rem !important;
    padding-right: 0.6rem !important;
    margin-right: 0.5rem !important;
    margin-left: 0.5rem !important;
    transition: none;
    font-size: 1.1rem;
  }
  .nav-visible:hover{
    border: 2px solid rgba(0, 0, 0, 0.7);
    background-color: rgba(0, 0, 0, 0.7);
    color: #ffff !important;
    border-radius: 6px;
    transition: none;
  }
  .fa-user{
    color: rgba(0, 0, 0, 0.7) !important;
  }
  .nav-visible:hover > .fa-user{
    color: #ffff !important;
  }
  .my_links-right{
    padding-bottom: 0.3rem !important;
    padding-top: 0.3rem !important;
    padding-right: 0.3rem !important;
    padding-left: 0 !important;
  }
  .my_links-left{
    padding-bottom: 0.3rem !important;
    padding-top: 0.3rem !important;
    padding-right: 0 !important;
    padding-left: 0.3rem !important;
  }
  .container-fluid{
    margin: 0% 2% 0% 2%;
  }

  @media(max-width:815px){
    .container-fluid{
      margin: 0% 2.5% 0% 2.5%;
    }
  }
  .btn-out{
    border-style: solid;
    border-radius: 5px;
    border-width:2px;
    border-color: rgba(0, 0, 0, 0.7) !important;
    background-color: #f8f9fa !important;
    color:rgba(0,0,0,1) !important;
    transition: none;
    padding: 0.2rem 0.6rem 0.4rem 0.6rem !important;
    font-size: 1.1rem;
  }
  .btn-out:hover{
    border-color: rgba(0, 0, 0, 0.7) !important;
    background-color: rgba(0, 0, 0, 0.7) !important;
    color: #ffff !important;
    transition: none;
  }

  @media(max-width:991px){
    .btn-out{
      margin-top: 0.5rem;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">

    <%= link_to root_path, class: "navbar-brand ms-3" do %><%= image_tag "/logo.png", alt: "Web Page Logo", width: 40 , height: 40, class: "img-fluid me-2" %><% end %><%= link_to "toDoOrNotToDo", root_path, class: "navbar-brand brand m-0" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".collapse" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse collapse w-100 ">
        <ul class="navbar-nav ms-auto">
            <% if !user_signed_in? %>
                <li class="nav-item active my-1 d-flex justify-content-end align-items-center">
                    <%= link_to new_user_session_path, class: "nav-link nav-visible" do %><i class="me-1 fa fa-user me-2" aria-hidden="true"></i>Log In<% end %>
                </li>
                <li class="nav-item active my-1 d-flex justify-content-end align-items-center">
                    <%= link_to new_user_registration_path, class: "nav-link nav-visible" do %><i class="me-1 fa fa-user me-2" aria-hidden="true"></i>Sign Up<% end %>
                </li>
            <% end %>
            <% if user_signed_in? %>
                <li class="nav-item my-1 ms-3 d-flex justify-content-end align-items-center">
                    <%= button_to "Sign Out", destroy_user_session_path, class: "nav-link bg-light btn-out me-5", method: :delete %>
                </li>
            <% end %>
        </ul>
    </div>
  </div>
</nav>