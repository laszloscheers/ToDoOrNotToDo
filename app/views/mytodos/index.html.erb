<style>
    body{
    background-color: #f2f2f2;
    }
    .forum-content{
    margin: 0% 10% 0% 10%;
    }
    @media(max-width:476px){
    .forum-content{
        margin: 0% 5% 0% 5%;
    }
    }
    .jumbotron{
    margin: 1% 0% 1% 0%;
    }
    .jumbotron h1{
    font-size:2vw;
    font-weight: bold;
    color: rgba(0, 0, 0, 0.7);
    }
    .jumbotron p{
    font-size:1.3vw;
    padding-right: 15%;
    }
    .list-title{
        font-size:1.1vw;
    }
    @media(max-width:1450px){
        .jumbotron h1{
        font-size:3vw;
        }
        .jumbotron p{
        font-size:1.5vw;
        }
        .list-title{
            font-size:1.3vw;
        }
    }
    @media(max-width:1199px){
    .card-user{
        margin: 0% 0% 0% 0%;
    }
    }
    @media(max-width:991px){
        .jumbotron{
        margin: 15% 0% 0% 0%;
        }
        .jumbotron h1{
        font-size:7vw;
        }
        .jumbotron p{
        font-size:3.2vw;
        }
        .list-title{
            font-size:2.8vw;
        }
    }
    @media(max-width:476px){
        .jumbotron h1{
            font-size:10vw;
        }
        .jumbotron p{
            font-size:5vw;
        }
        .list-title{
            font-size:4vw;
        }
    }
    @media(max-width:992px){
    .card-holder{
        margin-bottom: 5%;
    }
    }
    @media(max-width:799px){
    .lists-flow{
        justify-content: center !important;
        flex-direction: column !important;
    }
    }
    .card-user{
    margin: 7% 0% 5% 5%;
    padding: 2% 1% 3% 1%;
    }
    @media(max-width:1199px){
    .card-user{
        margin: 7% 0% 0% 0%;
        padding: 2% 1% 3% 1%;
    }
    }
    .btn-card{
    margin: 2% 2% 2% 0%;
    }
    .btn-edit{
    border-style: solid;
    border-radius: 5px;
    border-width:2px;
    border-color: rgba(0, 0, 0, 0.7);
    background-color: rgba(0, 0, 0, 0.7);
    color: #ffff;
    transition: none;
    }
    .btn-edit:hover{
    background-color: #ffff;
    color: rgba(0, 0, 0, 1);
    border-color: rgba(0, 0, 0, 0.7);
    transition: none;
    }
    .btn-danger{
    border-style: solid;
    border-radius: 5px;
    border-width:2px;
    border-color: #dc3545;
    transition: none;
    }
    .btn-danger:hover{
    background-color: white;
    color:#dc3545;
    transition: none;
    }
    .card-body-posts p:first-child{
    color: rgba(0, 0, 0, 0.55);
    }
    .card-body-posts{
    text-decoration: none;
    color: #18654e;
    transition: none;
    }
    .card-body-posts:hover{
    color: rgba(0, 0, 0, 0.7) !important;
    transition: none;
    }

    .btn-posts-card-delete{
    color: #dc3545 !important;
    border-style: none;
    background-color: transparent;
    }
    .btn-posts-card-delete:hover{
    color: rgba(0, 0, 0, 0.7) !important;
    transition: none;
    }
    .check-btn{
    background-color: white;
    border-style: none;
    }
    .new-list-btn{
    background-color: #f2f2f2;
    border-style: none;
    }

    .new-list-icon{
    color: #18654e;
    transform: scale(3);
    }

    .new-list-btn:hover > .new-list-icon{
    color: rgba(0, 0, 0, 0.7);
    }
    .card-container{
        padding-left: 0 !important;
        min-height:50vh;
    }
    .modal-buttons{
        border-width: 2px;
        border-color: rgba(0, 0, 0, 0.7);
        background-color: rgba(0, 0, 0, 0.7);
        color: #ffff;
        transition: none;
    }
    .modal-buttons:hover{
        background-color: #f8f9fa;
        border-color: rgba(0, 0, 0, 0.7);
        color: rgba(0, 0, 0, 1);
        transition: none;
    }

    .list-name-container{
        overflow-x: auto;
    }
    .tasks-container{
        max-height: 15rem;
        overflow-y: auto;
    }
    .task-name-container{
        overflow-x: auto;
    }
    .lists-card{
        margin-right: 5%;
    }

</style>


<div class="row forum-content" >

    <!-- Jumbotron weolcome -->
    <div class="col-lg-8 p-0 d-flex align-items-center">
        <div class="text-left jumbotron">
            <h1>Welcome to your to-do's page</h1>
            <br />
            <p>Here you can add, edit, and delete your to-do lists.</p>
        </div>
    </div>
    <!--End Jumbotron -->
    
    <!--Profile card -->
    <div class="col-lg-4 p-0 d-flex justify-content-center card-holder" >
        <div class="card card-user text-start">
            <div class="card-body">
                <h2 class="card-title my-3">Profile:</h2>
                <h3 class="card-title my-3"><%= current_user.email %></h3>
                <br/>
                <%= link_to "Edit password", edit_user_registration_path, class: "nav-link", class: "btn btn-edit btn-card" %>

                <!-- Button trigger modal for account cancellation -->
                <button type="button" class="btn btn-danger btn-card" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete account</button>
                <!-- Modal for account cancellation -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header d-flex justify-content-center">
                                <h3 class="modal-title ms-4 my-2" id="exampleModalLabel">Are you sure to delete your account?</h3>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h5 class="modal-title mx-4 my-2" id="exampleModalLabel">All your personal data will be errased from the system.</h5>
                            </div>
                            <div class="modal-footer d-flex justify-content-center">
                                <%= button_to "Delete my account", registration_path(current_user), method: :delete, class: "btn btn-danger my-2" %>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End Modal -->

            </div>
        </div>
    </div>
    <!-- End profile card -->

    <hr />

    <%= render "partials/lists", lists: current_user.lists, list: @list, task: @task %>

</div>