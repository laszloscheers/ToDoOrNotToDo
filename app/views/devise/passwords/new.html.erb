<style>
  body{
    background-color: #f2f2f2;
  }
  .btn{
    border-style: solid;
    border-radius: 5px;
    border-width:2px;
    border-color: rgba(0, 0, 0, 0.7);
    background-color:  rgba(0, 0, 0, 0.7);
    color:#ffff;
  }
  .btn:hover{
    border-color: rgba(0, 0, 0, 0.7);
    background-color: #f8f9fa;
    color: rgba(0, 0, 0, 1);
  }
  a{
    text-decoration: none;
    color:  rgba(0, 0, 0, 0.7);
  }
  a:hover{
    color: rgba(0, 0, 0, 0.55);
  }
  .content{
    min-height: 75vh;
  }
</style>
<% if resource.errors.any? %>
  <%= render "devise/shared/error_messages", resource: resource %>
<% end %>

<div class=" my-5 d-flex justify-content-center content">
  <div class=" px-5 pb-5 pt-4" style="min-width: 30rem">
    <div class="card  mx-5 mt-5 mb-3">
      <div class="card-header">
        <h2>Forgot your password?</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        
          <p class="text-left">Please enter your email address and we will send you a link to reset your password.</p>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>
          </div>
          <br>
          <div class="form-group d-flex justify-content-end">
            <%= f.submit "Send me reset password", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="ms-5">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>