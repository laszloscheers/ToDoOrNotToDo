<style>
  body{
    background-color: #f2f2f2;
  }
  .btn{
    border-style: solid;
    border-radius: 5px;
    border-width:2px;
    border-color: rgba(0, 0, 0, 0.7);
    background-color: rgba(0, 0, 0, 0.7);
    color:#ffff;
    transition: none;
  }
  .btn:hover{
    border-color: rgba(0, 0, 0, 0.7);
    background-color: #f8f9fa;
    color:rgba(0, 0, 0, 1);
    transition: none;
  }
  a{
    text-decoration: none;
    color: rgba(0, 0, 0, 0.7);
  }
  a:hover{
    color: rgba(0, 0, 0, 0.55);
  }
  .card-container{
    min-width:40rem;
  }
  .content{
    min-height: 85vh;
    min-width: 30rem;
  }
  @media(max-width:512px){
    .card{
      margin-left:0 !important;
      margin-right:0!important;
    }
    .shared-links{
    margin-left: 5% !important;

    }
    .card-container{
      min-width:20rem;
    }
  .content{
    min-width: 25rem;
  }
  }

</style>

<% if resource.errors.any? %>
  <%= render "devise/shared/error_messages", resource: resource %>
<% end %>
<div class="px-5 pb-5 pt-4 content">
  <div class=" my-5 d-flex justify-content-center">
    <div class="card-container">
      <div class="card mt-5 mb-3">
        <div class="card-header">
          <h2>Sign up</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "form-control", placeholder: "example@email.com" %>
            </div>
            <br/>
            <div class="field form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              (<%= @minimum_password_length %> characters minimum)
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Your password" %>
            </div>
            <br/>
            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repeat password" %>
            </div>
            <br/>
            <div class="actions  d-flex justify-content-end">
              <%= f.submit "Sign up", class: "btn" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>